<Rulebook>
  <Phrases>
    <Phrase applications="1" methods="1" text="accept-*">
      <Rules>
        <Rule attribute="Returns_String" if="True" severity="INAPPROPRIATE"/>
        <Rule attribute="Return_Type_In_Name" if="False" severity="FORBIDDEN"/>
      </Rules>
      <Refinements>
        <Phrase applications="1" methods="1" text="int accept-[verb]-[adjective]-*(reference...)">
          <Rules>
            <Rule attribute="Parameter_Type_In_Name" if="True" severity="NOTIFY"/>
          </Rules>
        </Phrase>
        <Phrase applications="1" methods="1" text="void accept-[verb]-[adjective]-*())">
          <Rules>
          </Rules>
        </Phrase>
      </Refinements>
    </Phrase>  
  </Phrases>
</Rulebook>
